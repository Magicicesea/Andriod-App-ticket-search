<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/artistRecyleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/artistProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/artistRecyleView"
        app:layout_constraintEnd_toStartOf="@+id/artistProgressText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/artistRecyleView"
        app:layout_constraintTop_toBottomOf="@+id/artistRecyleView" />

    <TextView
        android:id="@+id/artistProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching results ..."
        app:layout_constraintBottom_toTopOf="@+id/artistRecyleView"
        app:layout_constraintEnd_toStartOf="@+id/artistRecyleView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/artistProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/artistRecyleView" />

</android.support.constraint.ConstraintLayout>
